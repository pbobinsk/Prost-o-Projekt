<%- include('../partials/_header') %>

<h2>Projekty</h2>
<a href="/projects/new"><button>Dodaj nowy projekt</button></a>

<% if (projects.length > 0) { %>
  <% projects.forEach(project => { %>
    <article>
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
      <a href="/projects/<%= project.id %>/edit">Edytuj</a>
      <form action="/projects/<%= project.id %>/delete" method="POST" style="display:inline;">
        <button type="submit" class="secondary">Usuń</button>
      </form>
    </article>
  <% }) %>
<% } else { %>
  <p>Nie ma jeszcze żadnych projektów. Dodaj pierwszy!</p>
<% } %>

